<div class ="container-form">
<h2>Create a Secret Santa event</h2>
<%= form_with model: @user do |f| %>
  <%= f.label :date_of_presents_exchange %>
  <%= f.text_field :date_of_presents_exchange %>
  <%= f.label :budget%>
  <%= f.text_field :budget%>
  <%= f.submit class: "btn btn-primary mt-3" %>
<% end %>
</div>
